<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#9C1816">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <item
        android:bottom="-20dp"
        android:left="-20dp"
        android:right="-20dp"
        android:top="-20dp">
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/main_color" />
        </shape>
    </item>
</ripple>
