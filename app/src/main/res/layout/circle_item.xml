<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:visibility="gone"
        android:id="@+id/circle_image_first"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@drawable/testicon"
        app:civ_border_width="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="57dp"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/circle_right_pager_first"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:layout_marginStart="-30dp"
        android:textSize="11sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:background="@drawable/custom_round_bg_3"
        app:drawableEndCompat="@drawable/flash"
        app:layout_constraintStart_toEndOf="@+id/circle_image_first"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/circle_right_first"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:rotation="30"
        android:background="@drawable/line_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_image_first" />

    <TextView
        android:visibility="gone"
        android:id="@+id/circle_title_first"
        android:layout_width="200dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/main_color"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_round_bg_2"
        android:textSize="14sp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:visibility="gone"
        android:id="@+id/circle_image_second"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@drawable/testicon"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="150dp"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/circle_right_pager_second"
        android:visibility="gone"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_marginStart="-30dp"
        android:textSize="11sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        app:drawableEndCompat="@drawable/flash"
        android:background="@drawable/custom_round_bg_3"
        app:layout_constraintStart_toEndOf="@+id/circle_image_second"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/circle_left_second"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:rotation="100"
        android:background="@drawable/line_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_image_second" />

    <TextView
        android:visibility="gone"
        android:id="@+id/circle_title_second"
        android:layout_width="200dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/main_color"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_round_bg_2"
        android:textSize="14sp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="100dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>