<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/button_with_plus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/primary_button"
        android:layout_width="100sp"
        android:layout_height="32sp"/>

    <TextView
        android:id="@+id/plus"
        app:layout_constraintTop_toTopOf="@id/button_with_plus"
        app:layout_constraintBottom_toBottomOf="@id/button_with_plus"
        app:layout_constraintStart_toStartOf="@id/button_with_plus"
        android:layout_width="12sp"
        android:layout_height="12sp"
        android:layout_marginEnd="12sp"
        android:layout_marginStart="12sp"
        android:background="@drawable/plus"
        android:backgroundTint="@color/white"/>

    <TextView
        android:id="@+id/plus_button_tv"
        app:layout_constraintTop_toTopOf="@id/button_with_plus"
        app:layout_constraintBottom_toBottomOf="@id/button_with_plus"
        app:layout_constraintStart_toEndOf="@id/plus"
        android:layout_width="wrap_content"
        android:layout_marginEnd="12sp"
        android:layout_marginStart="12sp"
        android:text="Button"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>