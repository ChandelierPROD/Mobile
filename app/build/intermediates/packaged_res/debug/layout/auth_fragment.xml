<?xml version="1.0" encoding="utf-8"?>

     

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/auth_fragment_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <FrameLayout
            android:id="@+id/success_auth"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:tag="binding_1">

            <include
                android:id="@+id/success_layout"
                layout="@layout/success_auth_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>
      
        <FrameLayout
            android:id="@+id/loading_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:tag="binding_2">

            <include
                android:id="@+id/loader"
                layout="@layout/loading_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

         