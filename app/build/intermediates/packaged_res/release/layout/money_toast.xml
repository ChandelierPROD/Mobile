<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:background="@drawable/outline_8"
    android:backgroundTint="@color/main_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/toast_iv"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/failed"
        app:layout_constraintEnd_toStartOf="@id/toast_tv"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_width="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/toast_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/toast_iv"
        app:layout_constraintBottom_toBottomOf="@id/toast_iv"
        app:layout_constraintStart_toEndOf="@id/toast_iv"
        android:layout_width="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="Не хватает средств"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>